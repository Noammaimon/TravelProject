@model IEnumerable<TravelProject.Models.TripModel>
@{
    ViewData["Title"] = "דף הבית";
}

<div class="hero-header">
    <div class="hero-overlay">
        @if (TempData["Success"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-4 border-0 d-flex align-items-center" role="alert">
                    <i class="bi bi-check-circle-fill fs-4 ms-3"></i>
                    <div>
                        <strong>איזה כיף!</strong> @TempData["Success"]
                    </div>
                    <button type="button" class="btn-close ms-0 me-auto" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
        <div class="container text-center text-white">
            <h1 class="display-3 fw-bold mb-3">החופשה הבאה שלכם מתחילה כאן</h1>
            <p class="lead fs-4">גלו יעדים קסומים במחירים ללא תחרות</p>
        </div>
    </div>
</div>

<div class="home-page-wrapper px-4" dir="rtl">

    <div class="search-bar-container shadow-lg bg-white p-2">
       <form asp-controller="Home" asp-action="Index" method="get" class="d-flex align-items-center w-100 px-2 py-1">

    <div class="search-item flex-grow-1 px-3">
        <label class="small fw-bold d-block mb-0 text-secondary">חיפוש חופשי</label>
        <input type="text" name="searchString"
               class="form-control border-0 bg-transparent p-0 shadow-none text-truncate"
               placeholder="יעד או מדינה..."
               value="@Context.Request.Query["searchString"]" />
    </div>


    <div class="search-item px-3" style="width: 130px;">
        <label class="small fw-bold d-block mb-0 text-secondary">מיין לפי</label>
        <select name="sortOrder" class="form-select border-0 bg-transparent p-0 shadow-none">
            <option value="">בחרו...</option>
            <option value="popular" selected="@(Context.Request.Query["sortOrder"] == "popular")">הכי פופולרי</option>
            <option value="discount" selected="@(Context.Request.Query["sortOrder"] == "discount")">חבילות מוזלות</option>
            <option value="price_asc" selected="@(Context.Request.Query["sortOrder"] == "price_asc")">מהזול ליקר</option>
            <option value="price_desc" selected="@(Context.Request.Query["sortOrder"] == "price_desc")">מהיקר לזול</option>
        </select>
    </div>


    <div class="search-item px-3" style="width: 125px;">
        <label class="small fw-bold d-block mb-0 text-secondary">מתי?</label>
        <input type="date" name="travelDate"
               class="form-control border-0 bg-transparent p-0 shadow-none"
               value="@Context.Request.Query["travelDate"]" />
    </div>


    <div class="search-item px-3" style="width: 130px;">
        <label class="small fw-bold d-block mb-0 text-secondary">סוג נופש</label>
        <select name="tripType" class="form-select border-0 bg-transparent p-0 shadow-none">
            <option value="">הכל</option>
            @if (ViewBag.TripTypes != null)
            {
                foreach (var type in ViewBag.TripTypes)
                {
                    <option value="@type" selected="@(Context.Request.Query["tripType"].ToString() == type.ToString())">@type</option>
                }
            }
        </select>
    </div>


    <div class="search-item px-3" style="width: 160px;">
        <label class="small fw-bold d-block mb-0 text-secondary">מחיר ($)</label>
        <div class="d-flex align-items-center gap-1">
            <input type="number" name="minPrice" placeholder="מ-"
                   class="form-control form-control-sm border-0 bg-transparent p-0 shadow-none w-50"
                   value="@Context.Request.Query["minPrice"]" />
            <span class="text-muted" style="font-size: 0.8rem;">-</span>
            <input type="number" name="maxPrice" placeholder="עד"
                   class="form-control form-control-sm border-0 bg-transparent p-0 shadow-none w-50"
                   value="@Context.Request.Query["maxPrice"]" />
        </div>
    </div>

    <div class="d-flex gap-2 align-items-center ps-3">
                <button type="submit" class="btn btn-brand-brown shadow-sm rounded-3 px-4 fw-bold" style="min-width: 70px; height: 45px;">
                    חיפוש
                </button>
        <a asp-action="Index" class="text-secondary text-decoration-none small fw-bold" style="white-space:nowrap;">
            נקה
        </a>
    </div>
</form>
    </div>

    <h3 class="section-title mb-4 mt-5 text-end">החבילות המומלצות שלנו</h3>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-5 g-4 mb-5">
        @foreach (var item in Model)
        {
            if (item == null) continue;

            <div class="col">
                <div class="card shadow-sm border-0 text-end" style="border-radius: 15px; overflow: hidden; height: 320px; background: #fff;">
                    <div class="position-relative" style="height: 140px;">
                        <img src="@(string.IsNullOrEmpty(item.ImagePaths) ? "/images/default-trip.jpg" : item.ImagePaths)"
                             class="w-100 h-100" style="object-fit: cover;" alt="@item.Destination">
                        
                    </div>

                    <div class="card-body p-3 d-flex flex-column" style="height: 180px;">
                        <h6 class="fw-bold mb-1 text-dark text-truncate" style="font-size: 1rem;">@item.Destination</h6>
                        <p class="text-muted small mb-2"><i class="bi bi-geo-alt"></i> @item.Country</p>

                        <p class="card-text text-secondary mb-3" style="font-size: 0.8rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; line-height: 1.4; height: 2.8em;">
                            @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 80)
                            {
                                @item.Description.Substring(0, 77)

                            }
                            else
                            {
                                @item.Description
                            }
                        </p>

                        <div class="mt-auto">
                            <a asp-controller="Trips" asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-brand-brown btn-sm w-100 py-1 shadow-sm" style="font-size: 0.8rem;">
                                פרטים והזמנה
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <section class="site-reviews py-5 bg-light mt-5 rounded-4">
        <div class="container text-center">
            <h2 class="mb-4 fw-bold">מה המטיילים שלנו אומרים על השירות</h2>

            @if (ViewBag.SiteReviews != null && ((List<TravelProject.Models.SiteReviewModel>)ViewBag.SiteReviews).Any())
            {
                <div id="reviewCarousel" class="carousel slide mx-auto" data-bs-ride="carousel" style="max-width: 800px;">
                    <div class="carousel-inner">
                        @{
                            var reviews = (List<TravelProject.Models.SiteReviewModel>)ViewBag.SiteReviews;
                            for (int i = 0; i < reviews.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="d-flex justify-content-center p-2">
                                        <div class="card shadow-sm border-0 p-4 w-100" style="border-radius: 15px; min-height: 200px; background: white;">
                                            <div class="text-warning mb-2">
                                                @for (int s = 0; s < reviews[i].Rating; s++)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                            </div>
                                            <p class="fs-5 fw-light italic">"@reviews[i].CommentText"</p>
                                            <span class="fw-bold text-primary"> @reviews[i].Username</span>
                                            <br />
                                            <small class="text-muted">@reviews[i].ReviewDate.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#reviewCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-secondary rounded-circle" aria-hidden="true" style="width: 2rem; height: 2rem;"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#reviewCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-secondary rounded-circle" aria-hidden="true" style="width: 2rem; height: 2rem;"></span>
                    </button>
                </div>
            }
            else
            {
                <p class="text-muted">עדיין אין ביקורות, היו הראשונים לדרג!</p>
            }
        </div>
    </section>
</div> ```

