@model TravelProject.Models.TripModel

<div class="container mt-4 text-end" dir="rtl">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white p-3">
            <h3 class="mb-0">הוספת מועד ופרטי חבילה ספציפיים</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="AddDate" method="post" enctype="multipart/form-data">
                <input type="hidden" name="tripModelId" value="@ViewBag.TripModelId" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TripType" class="form-label fw-bold">סוג נופש</label>
                        <select asp-for="TripType" class="form-select" required>
                            <option value="">-- בחר סוג נופש --</option>
                            <option value="משפחה">משפחה</option>
                            <option value="ירח דבש">ירח דבש</option>
                            <option value="הרפתקאות">הרפתקאות</option>
                            <option value="שיט">שיט</option>
                            <option value="יוקרה">יוקרה</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label fw-bold">מחיר (₪)</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label fw-bold">תאריך התחלה</label>
                        <input asp-for="StartDate" type="date" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label fw-bold">תאריך סיום</label>
                        <input asp-for="EndDate" type="date" class="form-control" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">תיאור המסלול והחבילה</label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="פרט כאן על המלונות, האטרקציות והלוז..." required></textarea>
                </div>

                <div class="row align-items-end">
                    <div class="col-md-6 mb-3">
                        <label asp-for="RoomsAvailable" class="form-label fw-bold">חדרים/מקומות פנויים</label>
                        <input asp-for="RoomsAvailable" type="number" class="form-control" required />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="AgeLimit" class="form-label fw-bold">מגבלת גיל</label>
                        <input asp-for="AgeLimit" type="number" class="form-control" placeholder="0 (ללא)" min="0" />
                        <span asp-validation-for="AgeLimit" class="text-danger"></span>
                        <div class="form-text text-muted" style="font-size: 0.8rem;">השאר 0 אם אין הגבלה</div>
                    </div>
                
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">צרף תוכנית טיול (PDF)</label>
                        <input type="file" name="pdfFile" class="form-control" accept="application/pdf" />
                    </div>
                </div>

                <div class="mt-4 border-top pt-3 d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@ViewBag.TripModelId" class="btn btn-outline-secondary">חזור לפרטים</a>
                    <button type="submit" class="btn btn-success px-5 fw-bold">שמור מועד ופרסם</button>
                </div>
            </form>
        </div>
    </div>
</div>