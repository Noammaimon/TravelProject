@model TravelProject.Models.TripModel

<div class="container mt-4 text-end" dir="rtl">
    <div class="form-container shadow-sm p-4 bg-white rounded-4">
        <h1 class="form-title fw-bold text-primary">שלב 1: הקמת יעד חדש</h1>
        
        <hr />

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Destination" class="form-label fw-bold">עיר / יעד</label>
                    <input asp-for="Destination" class="form-control" placeholder="למשל: פריז" />
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Country" class="form-label fw-bold">מדינה</label>
                    <input asp-for="Country" class="form-control" placeholder="למשל: צרפת" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-4 file-upload-section p-3 bg-light rounded-3">
                <label asp-for="ImageFiles" class="form-label fw-bold">תמונות אווירה של היעד</label>
                <input asp-for="ImageFiles" class="form-control" accept="image/*" multiple />
                <div class="form-text mt-2">
                    <i class="bi bi-info-circle"></i> מומלץ להעלות תמונות נוף שיוצגו בכל המועדים של יעד זה.
                </div>
            </div>

            <div class="form-group mt-4 border-top pt-3 text-start">
                <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-secondary me-2">ביטול</a>
                <button type="submit" class="btn btn-primary px-5 fw-bold">שמור והמשך להוספת תוכן לטיול <i class="bi bi-arrow-left-short"></i></button>
            </div>
        </form>
    </div>
</div>