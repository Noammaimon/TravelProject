@using Microsoft.AspNetCore.Http
@{    int? isAdmin = Context.Session.GetInt32("IsAdmin");
    string? username = Context.Session.GetString("Username");
    string homeController = "Home";
    string homeAction = "Index";
    if (isAdmin == 1)
    {
        homeController = "Admin";
        homeAction = "Index";
    }
    else if (isAdmin == 0 && username != null)
    {
        homeController = "Customer";
        homeAction = "Index";
    }
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-sm fixed-top custom-nav">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-airplane-engines-fill"></i> Travel Agency
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-controller="@homeController" asp-action="@homeAction">דף הבית</a>
                        </li>
                        
                        @if (isAdmin == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Admin" asp-action="Index">ניהול טיולים</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Admin" asp-action="ManageUsers">ניהול משתמשים</a>
                            </li>
                        }
                    </ul>


                    <ul class="navbar-nav gap-2 align-items-center me-auto">
                        @if (Context.Session.GetString("Username") != null)
                        {

                            <li class="nav-item d-flex align-items-center ms-3">
                                <span class="text-dark fw-bold">
                                    @Context.Session.GetString("Username") שלום
                                </span>
                            </li>

                            @if (username != null && isAdmin == 0)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-bold" asp-controller="Customer" asp-action="PersonalArea">
                                        <i class="bi bi-bag-check-fill"></i> ההזמנות שלי
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-bold" asp-controller="Customer" asp-action="Cart">
                                        <i class="bi bi-bag-check-fill"></i> עגלת קניות
                                    </a>
                                </li>
                            }


                            
                            @if (username != null && isAdmin == 0)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning fw-bold" href="#" data-bs-toggle="modal" data-bs-target="#siteReviewModal">
                                        <i class="bi bi-star-fill"></i> דרגו אותנו
                                    </a>
                                </li>

                            }
                            <li class="nav-item">
                                <a class="btn btn-outline-danger rounded-pill px-4 fw-bold shadow-none ms-2"
                                   asp-controller="Users" asp-action="Logout">
                                    התנתקות
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-pink rounded-pill px-4 fw-bold shadow-none"
                                   asp-controller="Users" asp-action="Login">
                                    התחברות
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-pink rounded-pill px-4 fw-bold shadow-none"
                                   asp-controller="Users" asp-action="Register">
                                    הרשמה
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; תשפ"ו - Travel Agency - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
 

    <div class="modal fade" id="siteReviewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-chat-heart text-primary"></i> מה דעתך על האתר?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-controller="Home" asp-action="SiteReviews" method="post">
                    <div class="modal-body text-center">
                        <p class="fw-bold">דרגו את חוויית הגלישה שלכם:</p>
                        <div class="star-rating">
                            <input type="radio" name="rating" value="5" id="s5" required /> <label for="s5">★</label>
                            <input type="radio" name="rating" value="4" id="s4" /> <label for="s4">★</label>
                            <input type="radio" name="rating" value="3" id="s3" /> <label for="s3">★</label>
                            <input type="radio" name="rating" value="2" id="s2" /> <label for="s2">★</label>
                            <input type="radio" name="rating" value="1" id="s1" /> <label for="s1">★</label>
                        </div>
                        <div class="mt-3 text-end">
                            <label class="form-label">הערות:</label>
                            <textarea name="comment" class="form-control" rows="3" required placeholder="נשמח לשמוע הצעות לשיפור..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ביטול</button>
                        <button type="submit" class="btn btn-primary px-4">שלח</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>