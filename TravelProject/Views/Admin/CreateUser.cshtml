@model TravelProject.Models.UserModel

<div class="container mt-5" dir="rtl">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-right shadow-sm mb-4">
            @TempData["Error"]
        </div>
    }

    <div class="card shadow border-0" style="max-width: 600px; margin: 0 auto; border-radius: 15px;">
        <div class="card-header bg-dark text-white p-3" style="border-radius: 15px 15px 0 0;">
            <h5 class="mb-0 text-right"><i class="fas fa-user-plus ml-2"></i> יצירת משתמש חדש</h5>
        </div>
        <div class="card-body p-4 text-right">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <form asp-action="CreateUser" method="post">
                <div class="form-group mb-3">
                    <label class="small fw-bold">שם משתמש</label>
                    <input asp-for="Username" class="form-control" required />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="small fw-bold">סיסמה</label>
                    <input asp-for="Password" type="password" name="password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger small fw-bold"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="small fw-bold">שם פרטי</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="small fw-bold">שם משפחה</label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label class="small fw-bold">אימייל</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-check mb-4 mr-4">
                    <input asp-for="IsAdmin" class="form-check-input" />
                    <label class="form-check-label mr-1 small fw-bold text-primary">הגדר כמנהל מערכת</label>
                </div>

                <div class="d-flex gap-2 justify-content-start mt-4">
                    <button type="submit" class="btn btn-success px-5 rounded-pill ml-2">שמור משתמש</button>
                    <a asp-action="ManageUsers" class="btn btn-outline-secondary px-4 rounded-pill">ביטול</a>
                </div>
            </form>
        </div>
    </div>
</div>