@model TravelProject.Models.UserModel

@{
    ViewData["Title"] = "הרשמה";
}

<div class="text-center">
    <h2>הרשמה למערכת</h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Register" method="post">

            <div class="form-group mb-3">
                <label class="control-label">שם משתמש:</label>
                <input asp-for="Username" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">סיסמה:</label>
                <input asp-for="Password" type="password" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">אימייל:</label>
                <input asp-for="Email" type="email" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">שם פרטי:</label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">שם משפחה:</label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="form-group text-center">
                <input type="submit" value="הירשם" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>